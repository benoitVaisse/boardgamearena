<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoardGameArena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">BoardGameArena Admin</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Admin" asp-action="ListRole">Les Roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-route="admin_players">Nos Joueurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Game" asp-action="AdminIndex">Nos Jeux</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Account" asp-action="MyAccount">Mon Compte</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Logout">Deconnection</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="success container-fluid">
        @if (!string.IsNullOrEmpty(ViewBag.success))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.success
            </div>

        }
    </div>
    <div class="error container-fluid">
        @if (!string.IsNullOrEmpty(ViewBag.error))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.error
            </div>

        }
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BoardGameArena - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
