@model IEnumerable<BoardGameArena.Models.Part>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="display-4 text-center">Voici la liste des parties jouées</h1>
    <hr />
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-right ml-auto my-5">
            <a asp-route="new-part" class="btn btn-primary"> Créer une Nouvelle partie </a>

        </div>

    }
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (Part Part in Model)
            {
                <partial name="~/Views/Part/_partials/OnePart.cshtml" model="@Part" />
            }
        </div>
    }
    else
    {
        <p>Aucune partie n'a était trouvés</p>
    }
</div>
