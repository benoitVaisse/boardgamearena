@model IEnumerable<Game>
@{
    ViewData["Title"] = "Liste des Jeux";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Administration : Liste des jeux</h1>

<div class="text-right my-3">
    <a asp-route="admin_game_create_get" >Créer un Nouveau jeu</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Nb min</th>
                <th scope="col">Nb max</th>
                <th scope="col">Nombre de parties</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Game Game in @Model)
            {
            <tr>
                <td>@Game.Id</td>
                <td>@Game.Title</td>
                <td>@Game.NbMin</td>
                <td>@Game.NbMax</td>
                <td>@Game.Parts.Count()</td>
                <td>
                    <a class="btn btn-primary" asp-route="AdminGameDetail" asp-route-id="@Game.Id">Détail</a>
                    <a class="btn btn-warning" asp-route="AdminGameEdit" asp-route-id="@Game.Id">Editer</a>
                    <a class="btn btn-danger" asp-route="admin_game_delete" asp-route-id="@Game.Id">Supprimer</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>