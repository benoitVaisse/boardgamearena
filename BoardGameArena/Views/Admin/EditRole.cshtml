@model BoardGameArena.ViewModels.AdminEditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Role</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="ListRole">Retour</a>
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
            <div class="card my-4">
                <div class="card-header">
                    <h3>Utilisateur avec ce Rôle</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        <ul>
                            @foreach (Player User in Model.Users)
                            {
                                <li> @User.UserName </li>
                            }

                        </ul>
                    }
                    else
                    {
                        <h3>Pas d'utilisateur pour ce rôle</h3>
                    }
                </div>
                <div class="card-footer">

                </div>
            </div>
        </form>
    </div>

    
</div>


