@model IEnumerable<Player>
@{
    ViewData["Title"] = "IndexAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="my-4">Administration : Liste Utilisateurs</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Nombre de parties</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Player Player in @Model)
            {
                <tr>
                    <td>@Player.Id</td>
                    <td>@Player.UserName</td>
                    <td>@Player.Email</td>
                    <td>@Player.PartPlayers.Count()</td>
                    <td>
                        @*<a class="btn btn-primary" asp-route="AdminGameDetail" asp-route-id="@Player.Id">Détail</a>*@
                        <a class="btn btn-danger" asp-route="admin_player_delete" asp-route-id="@Player.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

